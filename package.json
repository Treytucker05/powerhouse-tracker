{
  "name": "powerhouse-rp-toolkit",
  "type": "module",
  "version": "0.9.0-beta",
  "description": "Renaissance Periodization Training Toolkit for PowerHouseATX",
  "scripts": {
    "dev": "vite",
    "serve": "parcel index.html --no-cache --port 1234 --open false",
    "build": "vite build",
    "audit": "node scripts/collect-ui-inventory.js && node scripts/convert-inventory-to-md.js buttons.json && node scripts/report-missing-handlers.js",
    "audit:dev": "run-p serve audit",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:unit": "vitest run --coverage",
    "lint": "eslint js/ --ext .js",
    "lint:ci": "eslint \"{js,src,lib,tracker-ui}/**/*.{js,jsx}\" --max-warnings 0",
    "ci": "npm run lint && npm run test && node scripts/report-missing-handlers.js --fail-on-missing",
    "verify": "pnpm run build && pnpm run test:unit && pnpm run lint:ci"
  },
  "keywords": [
    "fitness",
    "renaissance periodization",
    "training",
    "workout"
  ],
  "author": "PowerHouseATX",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/eslint-parser": "^7.24.0",
    "@parcel/packager-raw-url": "^2.15.2",
    "@parcel/transformer-webmanifest": "^2.15.2",
    "@playwright/test": "^1.53.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "buffer": "^6.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.2.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "jsdom": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.15.2",
    "playwright": "^1.53.1",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.0",
    "chart.js": "^4.5.0",
    "clipboardy": "^4.0.0"
  },
  "targets": {
    "default": {
      "sourceMap": true,
      "engines": {
        "browsers": "> 0.5%, not dead"
      }
    }
  }
}
