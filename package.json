{
  "private": true,
  "name": "powerhouse-tracker-root",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "cd tracker-ui-good/tracker-ui && npm run dev",
    "build": "npm --prefix tracker-ui-good/tracker-ui run build",
    "lint": "npm --prefix tracker-ui-good/tracker-ui run lint",
    "test": "npm --prefix tracker-ui-good/tracker-ui run test",
    "test:ci": "npm --prefix tracker-ui-good/tracker-ui run test:ci",
    "prepush": "npm run lint && npm run test:ci",
    "verify:531": "node scripts/verify-531.mjs",
    "validate:531": "node scripts/validate-program-json.mjs schemas/531-program.schema.json data/programs/531/*.json",
    "index:531": "node scripts/build-531-index.mjs data/programs/531",
    "index:531:packs": "node scripts/build-531-pack-index.mjs data/packs/531",
    "programs:531": "npm run validate:531 && npm run index:531",
    "report:531": "node scripts/report-531-programs.mjs data/programs/531",
    "start": "npm run dev",
    "extract:build": "ts-node --transpile-only scripts/build-extraction-sheet.ts",
    "extract:build:js": "node scripts/build-extraction-sheet.js",
    "extract:all": "npm run extract:build:js && node scripts/open-extraction.js",
    "format": "prettier --write .",
    "install-app": "cd tracker-ui-good/tracker-ui && npm ci",
    "validate:csv": "node scripts/validate_csv_schema.cjs --schemas=schemas.json",
    "validate:templates:ui": "node scripts/validate-templates-ui.mjs",
    "validate:merged": "node scripts/validate-merged.mjs",
    "apply:research": "node scripts/apply-research-json.mjs"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "ajv": "^8.17.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "xlsx": "^0.18.5"
  }
}