{
  "private": true,
  "name": "powerhouse-tracker-root",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "cd tracker-ui-good/tracker-ui && npm run dev",
    "build": "npm --prefix tracker-ui-good/tracker-ui run build",
    "lint": "npm --prefix tracker-ui-good/tracker-ui run lint",
    "test": "npm --prefix tracker-ui-good/tracker-ui run test",
    "test:ci": "npm --prefix tracker-ui-good/tracker-ui run test:ci",
    "prepush": "npm run lint && npm run test:ci",
    "verify:531": "node scripts/verify-531.mjs",
    "start": "npm run dev",
    "extract:build": "ts-node --transpile-only scripts/build-extraction-sheet.ts",
    "extract:build:js": "node scripts/build-extraction-sheet.js",
    "extract:all": "npm run extract:build:js && node scripts/open-extraction.js",
    "format": "prettier --write .",
    "install-app": "cd tracker-ui-good/tracker-ui && npm ci",
    "validate:csv": "node scripts/validate_csv_schema.js --schemas=schemas.json"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "xlsx": "^0.18.5"
  }
}